                                </li>
                                <li class="nav-item">
                                    <a class="nav-link font-italic" href="@Url.Action("Index", "Visits")">Agendar visita</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link font-italic" href="@Url.Action("Index", "visit_shrines")">Visitas y Santuarios</a>
                                </li>
                            }
                            @if (User.IsInRole("Visitor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link font-italic" href="@Url.Action("Index", "Visits")">Agendar visita</a>
                                </li>  
                            }

                        </ul>
                    </nav>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>


    </header>



